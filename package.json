{
  "name": "plexintroeditor",
  "type": "module",
  "version": "1.1.0",
  "description": "Add, edit, and delete Plex intro markers",
  "main": "app.js",
  "scripts": {
    "test": "node Test/Test.js --test",
    "build-win": "npm-run-all build-win:*",
    "build-win:1": "rimraf dist",
    "build-win:2": "mkdirp dist/dist",
    "build-win:3": "rollup app.js -o dist/built.js --format cjs",
    "build-win:4": "node Build\\build-win.cjs",
    "build-win:5": "copyfiles index.html SVG/*.svg Shared/** Client/** node_modules/sqlite3/** dist",
    "build-win:6": "mv dist/built.js dist/dist/built.js",
    "build-win:7": "powershell Compress-Archive dist/* dist/PlexIntroEditor.v1.1.0-win64.zip"
  },
  "author": "Daniel Rahn",
  "license": "MIT",
  "dependencies": {
    "mime-types": "^2.1.35",
    "open": "^8.4.0",
    "sqlite3": "^5.0.8"
  },
  "devDependencies": {
    "copyfiles": "^2.4.1",
    "nexe": "^4.0.0-rc.1",
    "npm-run-all": "^4.1.5",
    "rcedit": "^3.0.1",
    "rollup": "^2.78.0"
  }
}
