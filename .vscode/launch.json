    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch PlexIntroEditor",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\app.js"
        },
        {
            "type" : "node",
            "request" : "launch",
            "name" : "Run Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "--test",
                "--config_override",
                "testConfig.json",
                "--test_log_level",
                "DarkVerbose",
            ],
            "program": "${workspaceFolder}\\Test\\Test.js"
        }
    ]
}
