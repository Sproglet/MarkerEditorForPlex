    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch PlexIntroEditor",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "First Launch (stdin enabled)",
            "skipFiles": [ "<node_internals>/**" ],
            "console": "integratedTerminal",
            "program": "${workspaceFolder}\\app.js"
        },
        {
            "type" : "node",
            "request" : "launch",
            "name" : "Run Tests",
            "skipFiles": [ "<node_internals>/**" ],
            "args": [ "--test" ],
            "program": "${workspaceFolder}\\Test\\Test.js"
        },
        {
            "type" : "node",
            "request" : "launch",
            "name" : "Run Specific Test",
            "console": "integratedTerminal",
            "skipFiles": [ "<node_internals>/**" ],
            "args": [ "--test", "--ask-input" ],
            "program": "${workspaceFolder}\\Test\\Test.js"
        }
    ]
}
